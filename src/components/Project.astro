---
const { title, desc, tech, link, role, dates } = Astro.props;
---

<div class="single-item">
  <h3>{title}</h3>
  <span style="display: flex; align-items: baseline; justify-content: space-between;">
    <strong style="color: #fff; font-weight: 400; font-size: large; line-height: 40px; margin-left: 2px;">{role}</strong>
    <p style="font-size: large; word-spacing: 5px;">{dates}</p> 
  </span>
  <a href=`${link}` target="_blank" style="color: #ffffff; text-decoration: none; display: block; margin-bottom: 10px;">{link}</a>
  <div class="project-desc project-desc-list w-richtext">
    <ul role="list">
      {desc.map(item => <li>{item}</li>)}
    </ul>
  </div>
  <div class="mini-label-white">Technologies &amp; tools</div>
  <div class="chips-container">
    {tech.map(techItem => <div class="single-chip">{techItem}</div>)}
  </div>
</div>
